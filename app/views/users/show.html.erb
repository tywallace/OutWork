<% provide(:title, @user.name) %>


<div class="container">
  <h4 class="text-muted">Hello <%= @user.name %></h4>
  <div class="row text-center">
      <h3><small>Activity</small></h3>
  </div>
  <div id="feed">
     <!-- render 'logs/log' -->
  </div>
  <div class="row">
    <aside class="col-md-4">
      <section>
        <h1>
          <%= image_tag(profile_pic @user)%>
          <%= @user.name %>
        </h1>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
    </aside>
    <div class="col-md-8">
      <%= render 'follow_form' if logged_in? %>
      <% if @user.microposts.any? %>
        <h3>Microposts (<%= @user.microposts.count %>)</h3>
        <ol class="microposts">
          <%= render @microposts %>
        </ol>
        <%= will_paginate @microposts %>
      <% end %>
    </div>
  </div>
</div>

